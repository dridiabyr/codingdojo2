@{
    ViewData["Title"] = "Survey Result";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #fafafa;
        padding: 30px;
        max-width: 600px;
        margin: auto;
    }
    .result-box {
        background-color: white;
        padding: 20px 30px;
        border-radius: 8px;
        box-shadow: 0 0 10px #bbb;
    }
    h2 {
        color: #333;
    }
    p {
        font-size: 1.1em;
        margin: 8px 0;
    }
    .go-back {
        margin-top: 25px;
    }
    .go-back button {
        background-color: #007BFF;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1em;
    }
    .go-back button:hover {
        background-color: #0056b3;
    }
</style>

<div class="result-box">
    <h2>Thank you for submitting!</h2>

    <p><strong>Name:</strong> @ViewBag.Name</p>
    <p><strong>Location:</strong> @ViewBag.Location</p>
    <p><strong>Favorite Language:</strong> @ViewBag.Language</p>
    <p><strong>Comment:</strong> @Html.Raw(ViewBag.Comment)</p>

    <div class="go-back">
        <form asp-action="Submit" method="post">
            <button type="submit">Go Back</button>
        </form>
    </div>
</div>
