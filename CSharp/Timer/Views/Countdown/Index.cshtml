@{
    ViewData["Title"] = "CountDown";
}

<style>
    body {
        font-family: Arial, sans-serif;
        text-align: center;
        padding: 40px;
        background-color: #f9f9f9;
    }

    .box-container {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-bottom: 30px;
    }

    .box {
        border: 2px solid #555;
        padding: 20px;
        width: 200px;
        background-color: #fff;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .box h3 {
        margin-bottom: 10px;
    }

    .time-remaining {
        font-size: 1.2em;
        margin-top: 30px;
        font-weight: bold;
    }
</style>

<h1>CountDown Page</h1>

<div class="box-container">
    <div class="box">
        <h3>Start Time</h3>
        <p>@string.Format("{0:yyyy-MM-dd HH:mm:ss}", ViewBag.StartTime)</p>
    </div>

    <div class="box">
        <h3>End Time</h3>
        <p>@string.Format("{0:yyyy-MM-dd HH:mm:ss}", ViewBag.EndTime)</p>
    </div>
</div>

<div class="time-remaining">
    <p>
        @ViewBag.DaysLeft Day(s), @ViewBag.HoursLeft Hour(s), @ViewBag.MinutesLeft Minute(s) Remaining
    </p>
</div>
