@model Reciepes.Models.Recipe

<h2>Create a New Recipe</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Ingredient1"></label>
        <input asp-for="Ingredient1" />
        <span asp-validation-for="Ingredient1" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Ingredient2"></label>
        <input asp-for="Ingredient2" />
    </div>

    <div>
        <label asp-for="Ingredient3"></label>
        <input asp-for="Ingredient3" />
    </div>

    <div>
        <label asp-for="Ingredient4"></label>
        <input asp-for="Ingredient4" />
    </div>

    <div>
        <label asp-for="Ingredient5"></label>
        <input asp-for="Ingredient5" />
    </div>

    <div>
        <label asp-for="Instructions"></label>
        <textarea asp-for="Instructions"></textarea>
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>

    <div>
        <label><input asp-for="Vegetarian" /> Vegetarian</label>
        <label><input asp-for="GlutenFree" /> Gluten-Free</label>
    </div>

    <button type="submit">Create Recipe</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
